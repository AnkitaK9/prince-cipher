<%- include('partials/header') %>

<div class="container">
  <div class="jumbotron centered">
    <i class="fas fa-envelope-open fa-6x"></i>
    <h1 class="display-3">Confessions</h1>
    <p class="secret-text">Share confessions anonymously!</p>

    <form action="/submit" method="POST">

      <div class="form-group">
        
        <input type="text" class="form-control text-center" name="secret" placeholder="What's your confession?">
        <label for="target">Who's your confession for? </label>
        <select name="target" id="target" class="form-control text-center">
          <% for (let i=0; i<emails.length;i++){ %>
            <option value=<%= emails[i]%>><%= emails[i] %></option>
            <% } %>    
        </select>
      </div>
      <button type="submit" class="btn btn-dark">Submit</button>
    </form>


  </div>
</div>
<%- include('partials/footer') %>
